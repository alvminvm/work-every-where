# alias
alias q="exit"
alias c='clear'
alias glg='git log --graph --decorate'
alias glga='git log --graph --decorate --all'
alias blog='cd ~/VirtualEnvs/Pelican/ && . bin/activate && cd zlv.me'
alias blog-on='make html && make serve'
alias coveragem='java -cp emma.jar emma merge '
alias gitcafepagepush='git push gitcafe master:gitcafe-pages -f'
alias gitstatus='git status'
#alias git_custom_status='git status'
alias install='sudo apt-get install '

# using vim mode
bindkey -v

bindkey '^P' up-history
bindkey '^N' down-history
bindkey '^?' backward-delete-char
bindkey '^h' backward-delete-char
bindkey '^w' backward-kill-word
bindkey '^r' history-incremental-search-backward

function zle-line-init zle-keymap-select {
    VIM_PROMPT="%{$fg_bold[yellow]%} [% NORMAL]%  %{$reset_color%}"
    #RPS1="${${KEYMAP/vicmd/$VIM_PROMPT}/(main|viins)/}$(git_custom_status) $EPS1"
    RPS1="${${KEYMAP/vicmd/$VIM_PROMPT}/(main|viins)/} $EPS1"
    zle reset-prompt
}

zle -N zle-line-init
zle -N zle-keymap-select
export KEYTIMEOUT=1
